<div class="blogs">
  <h1 class="section-heading">Blog</h1>
  <div class="container">
    <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>

      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <% page_articles.each_with_index do |article, i| %>
      <h3><%= article.date.strftime('%b %e, %Y') %></h3>
      <p> <%= article.title %> </p>
      <%= link_to article.title, article, class: "github-button btn btn-secondary btn-block" %>
    <% end %>

    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>
  </div>
</div>
